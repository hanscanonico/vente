<h1><%= @product.title %></h1>
<p>Nb Views : <%= @product.views %></p>
<p><%= @product.description %></p>
<p><%= @product.price %>&euro; </p>
<div class="buttons_show">
  <div class="item_button"><%= link_to "Edit", edit_product_path(@product), class: "button" %></div>
  <div class="item_button"><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "button" %></div>
  <div class="item_button"><%= link_to "List", products_path, class: "button" %></div>
</div>